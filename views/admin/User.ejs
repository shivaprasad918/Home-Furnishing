      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:../../partials/_navbar.html -->
        <div class="container mt-5">
          <div class="card">
              <div class="card-header bg-primary">
                  <h3 class="card-title mb-0 text-white">All Users</h3>
              </div>
              <div class="card-body">
                  <div class="table-responsive">
                      <table class="table table-striped">
                          <thead class="thead-dark">
                              <tr>
                                  <th>Client Name</th>
                                  <th>Email</th>
                                  <th>Mobile</th>
                                  <th>Status</th>
                                  <th>Actions</th>
                              </tr>
                          </thead>
                          <tbody>
                              <% if (user.length > 0) { %>
                                <% for (let i = 0; i < user.length; i++) { %>
                                  <tr>
                                      <td><%= user[i].name %></td>
                                      <td><%= user[i].email %></td>
                                      <td><%= user[i].mobile %></td>
                                      <td>
                                          <% if (user[i].is_block === 'active') { %>
                                              <span class="badge badge-success">Active</span>
                                          <% } else { %>
                                              <span class="badge badge-danger">Blocked</span>
                                          <% } %>
                                      </td>
                                      <td>
                                          <% if (user[i].is_block === 'active') { %>
                                              <a href="/admin/action/<%= user[i]._id %>" class="btn btn-danger">Block</a>
                                          <% } else { %>
                                              <a href="/admin/action/<%= user[i]._id %>" class="btn btn-success">Unblock</a>
                                          <% } %>
                                      </td>
                                  </tr>
                              <% } %>
                              
                              <% } else { %>
                                  <tr>
                                      <td colspan="5" class="text-center">Users Not Found</td>
                                  </tr>
                              <% } %>
                          </tbody>
                      </table>
                  </div>
              </div>
          </div>
      </div>
      
