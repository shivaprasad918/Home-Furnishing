      <!-- category -->
      <div class="container-fluid mt-3">
        <div class="row justify-content-center">
          <div class="col-md-8">
            <div class="category mt-5 p-3">
              <h2 class="cate-title text-white font-weight-bold mb-4">Category Management</h2>
              <form action="/admin/updateCategory" method="POST" class="category-form" id="categoryForm">
                <div class="form-group">
                  <label for="categoryLabel" class="font-weight-bold">Category</label>
                  <input type="text" class="form-control" id="categoryLabel" name="categoryLabel" value="<%= category.categoryName %>" required>
                </div>
                <div class="form-group">
                  <label for="subcategory" class="font-weight-bold">Sub category</label>
                  <input type="text" class="form-control" id="subcategory" name="subcategory" value="<%= category.subCategory %>" required>
                </div>
                <div class="form-group">
                  <label for="categoryDescription" class="font-weight-bold">Category Description</label>
                  <textarea class="form-control" id="categoryDescription" name="categoryDescription" rows="6" required><%= category.description %></textarea>
                </div>
                <input type="hidden" name="categoryId" value="<%= category._id %>">
                <button type="submit" class="btn btn-primary" id="editCategoryBtn">Edit Category</button>
              </form>
            </div>
      
            <script>
              document.getElementById('editCategoryBtn').addEventListener('click', function(event) {
                event.preventDefault();
                const form = document.getElementById('categoryForm');
                const categoryLabel = document.getElementById('categoryLabel').value.trim();
                const subcategory = document.getElementById('subcategory').value.trim();
                const categoryDescription = document.getElementById('categoryDescription').value.trim();
      
                if (categoryLabel === '') {
                  Swal.fire({
                    icon: 'error',
                    title: 'Validation Error',
                    text: 'Please enter a category.'
                  });
                  return;
                }
      
                if (subcategory === '') {
                  Swal.fire({
                    icon: 'error',
                    title: 'Validation Error',
                    text: 'Please enter a sub category.'
                  });
                  return;
                }
      
                if (categoryDescription === '') {
                  Swal.fire({
                    icon: 'error',
                    title: 'Validation Error',
                    text: 'Please enter a category description.'
                  });
                  return;
                }
      
                Swal.fire({
                  title: 'Are you sure?',
                  text: "Do you want to update this category?",
                  icon: 'warning',
                  showCancelButton: true,
                  confirmButtonColor: '#3085d6',
                  cancelButtonColor: '#d33',
                  confirmButtonText: 'Yes, update it!'
                }).then((result) => {
                  if (result.isConfirmed) {
                    Swal.fire(
                      'Updated!',
                      'The category has been updated.',
                      'success'
                    ).then(() => {
                      form.submit();
                    });
                  }
                });
              });
            </script>
      
          </div>
