                <table class="table table-striped w-100">
                    <thead class="thead-dark">
                        <tr>
                            <th>Name</th>
                            <th>Percentage</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="offerTableBody">
                        <% offers.forEach(offer => { %>
                            <tr data-id="<%= offer._id %>">
                                <td><%= offer.name %></td>
                                <td><%= offer.percentage %></td>
                                <td><%= offer.startDate %></td>
                                <td><%= offer.endDate %></td>
                                <td><%= offer.status ? 'Active' : 'Inactive' %></td>
                                <td><button class="btn btn-danger delete-offer">Delete</button></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
