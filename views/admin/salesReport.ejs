                <div class="row">
                    <div class="col-12 grid-margin">
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>User Name</th>
                                                <th>Date</th>
                                                <th>Email</th>
                                                <th>Total</th>
                                                <th>Payment Method</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody id="salesTableBody">
                                            <% orders.forEach(order => { %>
                                                <tr>
                                                    <td><%= order.User ? order.User.name : 'Unknown' %></td>
                                                    <td><%= new Date(order.createdAt).toDateString() %></td>
                                                    <td><%= order.User ? order.User.email : 'Unknown' %></td>
                                                    <td><%= order.totalPrice %></td>
                                                    <td><%= order.paymentMethod %></td>
                                                    <td><%= order.paymentStatus %></td>
                                                </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="btn btn-outline-success" onclick="downloadSalesReport()">Download</button>
                



                <script>
                    let fetchedOrders = [];

                    async function fetchSalesReport() {
                        const startDate = document.getElementById('startDate').value;
                        const endDate = document.getElementById('endDate').value;
                        const reportType = document.getElementById('reportType').value;

                        const response = await fetch('/admin/salesreport', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({ startDate, endDate, reportType }),
                        });

                        const data = await response.json();
                        const tableBody = document.getElementById('salesTableBody');
                        tableBody.innerHTML = '';

                        if (data.orders.length === 0) {
                            tableBody.innerHTML = '<tr><td colspan="6">No orders found for the selected period.</td></tr>';
                            return;
                        }

                        fetchedOrders = data.orders;

                        data.orders.forEach(order => {
                            const row = `
                        <tr>
                            <td>${order.User ? order.User.name : 'Unknown'}</td>
                            <td>${new Date(order.createdAt).toDateString()}</td>
                            <td>${order.User ? order.User.email : 'Unknown'}</td>
                            <td>${order.totalPrice}</td>
                            <td>${order.paymentMethod}</td>
                            <td>${order.paymentStatus}</td>
                        </tr>
                     `;
                            tableBody.innerHTML += row;
                        });
                    }

                    async function downloadSalesReport() {
                        try {
                            const response = await fetch('/admin/salesreport/download', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json',
                                },
                                body: JSON.stringify({ orders: fetchedOrders }), // Ensure `fetchedOrders` is defined
                            });

                            if (response.ok) {
                                const blob = await response.blob();
                                const link = document.createElement('a');
                                link.href = window.URL.createObjectURL(blob);
                                link.download = 'sales_report.pdf';
                                link.click();
                            } else {
                                console.error('Error downloading sales report:', response.statusText);
                            }
                        } catch (error) {
                            console.error('Error in downloadSalesReport function:', error);
                        }
                    }

                </script>


