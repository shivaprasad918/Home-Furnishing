                <div class="row">
                    <div class="col-12 grid-margin">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Order Details</h4>
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Product Name</th>
                                                <th>Original Price</th>
                                                <th>Quantity</th>
                                                <% if (order.coupon) { %>
                                                    <th>Coupon Discount Price</th>
                                                    <% } %>
                                                        <th>Status</th>
                                                        <th>Return Request</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% order.products.forEach((product, index)=> { %>
                                                <tr>
                                                    <td>
                                                        <%= product.name %>
                                                    </td>
                                                    <td>
                                                        <%= product.price.toFixed(2) %>
                                                    </td>
                                                    <td>
                                                        <%= product.quantity %>
                                                    </td>
                                                    <% if (order.coupon) { %>
                                                        <td>
                                                            <%= product.total.toFixed(2) %>
                                                        </td>
                                                        <% } %>
                                                            <td>
                                                                <% if (product.status !=='delivered' ) { %>
                                                                    <form>
                                                                        <input type="hidden" name="orderId"
                                                                            value="<%= order._id %>">
                                                                        <select name="status" class="custom-select"
                                                                            data-order-id="<%= order._id %>"
                                                                            data-product-id="<%= product._id %>">
                                                                            <option value="pending"
                                                                                <%=product.status==='pending'
                                                                                ? 'selected' : '' %>>Pending</option>
                                                                            <option value="shipped"
                                                                                <%=product.status==='shipped'
                                                                                ? 'selected' : '' %>>Shipped</option>
                                                                            <option value="delivered"
                                                                                <%=product.status==='delivered'
                                                                                ? 'selected' : '' %>>Delivered</option>
                                                                            <option value="cancelled"
                                                                                <%=product.status==='cancelled'
                                                                                ? 'selected' : '' %>>Cancelled</option>
                                                                            <option value="returned"
                                                                                <%=product.status==='returned'
                                                                                ? 'selected' : '' %>>Returned</option>
                                                                            <option value="rejected"
                                                                                <%=product.status==='rejected'
                                                                                ? 'selected' : '' %>>Rejected</option>

                                                                        </select>
                                                                    </form>
                                                                    <% } else { %>
                                                                        <select class="custom-select" disabled>
                                                                            <option selected>Delivered</option>
                                                                        </select>
                                                                        <% } %>
                                                            </td>
                                                            <td>
                                                                <% if (product.status==='return-requested' ||
                                                                    product.status==='pending' ) { %>
                                                                    <button type="button"
                                                                        class="btn <%= product.status === 'return-requested' ? 'btn-danger' : 'btn-success' %> return-request"
                                                                        data-order-id="<%= order._id %>"
                                                                        data-product-id="<%= product._id %>">
                                                                        <%= product.status==='return-requested'
                                                                            ? 'Return Requested' : 'Return Request' %>
                                                                    </button>
                                                                    <% } else { %>
                                                                        <button type="button"
                                                                            class="btn <%= product.status === 'returned' ? 'btn-danger' : 'btn-secondary' %> return-request"
                                                                            disabled>
                                                                            <%= product.status.charAt(0).toUpperCase() +
                                                                                product.status.slice(1) %>
                                                                        </button>
                                                                        <% } %>
                                                            </td>
                                                </tr>
                                                <% }); %>
                                        </tbody>


                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Shipping Address Card -->
                    <div class="col-12 grid-margin">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Shipping Address</h4>
                                <% if (order.User.address && order.User.address.length> 0) { %>
                                    <p><strong>Name:</strong>
                                        <%= order.User.address[0].name %>
                                    </p>
                                    <p><strong>Phone:</strong>
                                        <%= order.User.address[0].phone %>
                                    </p>
                                    <p><strong>Address:</strong>
                                        <%= order.User.address[0].buildingName %>, <%= order.User.address[0].city %>,
                                                <%= order.User.address[0].district %>, <%= order.User.address[0].state
                                                        %> - <%= order.User.address[0].postcode %>
                                    </p>
                                    <% } else { %>
