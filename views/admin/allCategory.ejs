    <div class="container mt-5">
      <div class="card">
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-striped">
              <thead class="thead-dark">
                <tr>
                  <th>Category</th>
                  <th>Subcategory</th>
                  <th>Category Description</th>
                  <th>Status</th>
                  <th>Actions</th>
                  <th>Offers</th>
                  <th>Update</th>
                  <th>Delete</th>
                </tr>
              </thead>
              <tbody>
                <% if (category.length> 0) { %>
                  <% category.forEach(cat=> { %>
                    <tr>
                      <td>
                        <%= cat.categoryName %>
                      </td>
                      <td>
                        <%= cat.subCategory %>
                      </td>
                      <td>
                        <%= cat.description %>
                      </td>
                      <td>
                        <% if (cat.is_block) { %>
                          <span class="badge badge-danger">Blocked</span>
                          <% } else { %>
                            <span class="badge badge-success">Active</span>
                            <% } %>
                      </td>
                      <td>
                        <form action="/admin/allCategory?id=<%= cat._id %>" method="post">
                          <button type="submit" name="block" value="<%= cat.is_block ? 'unblock' : 'block' %>"
                            class="btn <%= cat.is_block ? 'btn-success' : 'btn-danger' %>">
                            <%= cat.is_block ? 'Unblock' : 'Block' %>
                          </button>
                        </form>
                      </td>
                      <td>
                        <% if (cat.offers) { %>
                          <button class="btn btn-warning remove-offer" data-category-id="<%= cat._id %>">Remove Offer</button>
                        <% } else { %>
                          <button class="btn btn-success apply-offer" data-category-id="<%= cat._id %>">Apply Offer</button>
                        <% } %>
                      </td>
                      
                      <td>
                        <a href="/admin/updateCategory?id=<%= cat._id %>" class="btn btn-primary">Edit</a>
                      </td>
                      <td>
                        <form id="deleteForm<%= cat._id %>" action="/admin/delete-category/<%= cat._id %>"
                          method="POST">
                          <button type="button" id="confirmDeleteButton<%= cat._id %>"
                            class="btn btn-danger">Delete</button>
                        </form>
                      </td>
                    </tr>
                    <% }) %>
                      <% } else { %>
                        <tr>
                          <td colspan="8">No categories found.</td>
                        </tr>
                        <% } %>
              </tbody>

            </table>
